#include<stdio.h>
#include<math.h>
int main(){
   int number;
   printf("Enter number :");
   scanf("%d" , &number );

   if (number > 0) 
   {
     if (number % 2 == 0)
     {
       printf ("Number is positive \nNumber is Even");
     }
     else
      {
         printf ("Number is positive \nNumber is odd");
      }
    }
   else if (number < 0 )
   {
      if ( number % 2 == 0 )
        {
          printf("Number is negative \nNumber is even");
        }
      else 
        {
            printf ("Number is negative \nNumber is odd");
        }
    } 
   else {
    printf ("Number is nither positive nor negative ");
   }
    return 0;
}
